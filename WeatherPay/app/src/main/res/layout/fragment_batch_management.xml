<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:padding="@dimen/main_container_spacing">

    <Button
        android:id="@+id/closeBatchButton"
        style="@style/MainButton"
        android:layout_marginBottom="@dimen/button_space"
        android:text="@string/close_batch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reprintBatchButton"
        style="@style/MainButton"
        android:text="@string/reprint_batch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closeBatchButton" />

</androidx.constraintlayout.widget.ConstraintLayout>